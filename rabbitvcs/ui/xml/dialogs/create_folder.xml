<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="CreateFolder" parent="GtkBox">
    <property name="orientation">vertical</property>
    <property name="spacing">18</property>
    <child>
      <object class="GtkGrid">
        <property name="valign">center</property>
        <property name="hexpand">1</property>
        <property name="orientation">vertical</property>
        <property name="row_spacing">6</property>
        <child>
          <object class="GtkEntry" id="folder_name">
            <property name="focusable">1</property>
            <property name="margin-start">12</property>
            <property name="hexpand">1</property>
            <property name="invisible_char">‚óè</property>
            <signal name="changed" handler="on_folder_name_changed" swapped="no"/>
            <layout>
              <property name="column">0</property>
              <property name="row">1</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="label1">
            <property name="hexpand">1</property>
            <property name="label" translatable="1">&lt;b&gt;Folder Name&lt;/b&gt;</property>
            <property name="use_markup">1</property>
            <property name="xalign">0</property>
            <layout>
              <property name="column">0</property>
              <property name="row">0</property>
            </layout>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkGrid">
        <property name="hexpand">1</property>
        <property name="vexpand">1</property>
        <property name="orientation">vertical</property>
        <property name="row_spacing">6</property>
        <child>
          <object class="GtkScrolledWindow" id="scrolledwindow1">
            <property name="focusable">1</property>
            <property name="margin-start">12</property>
            <property name="hexpand">1</property>
            <property name="vexpand">1</property>
            <property name="child">
              <object class="GtkTextView" id="log_message">
                <property name="focusable">1</property>
              </object>
            </property>
            <layout>
              <property name="column">0</property>
              <property name="row">1</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="label2">
            <property name="hexpand">1</property>
            <property name="label" translatable="1">&lt;b&gt;Add Message&lt;/b&gt;</property>
            <property name="use_markup">1</property>
            <property name="xalign">0</property>
            <layout>
              <property name="column">0</property>
              <property name="row">0</property>
            </layout>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
