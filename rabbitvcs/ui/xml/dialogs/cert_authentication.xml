<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="CertAuthentication" parent="GtkBox">
    <property name="orientation">vertical</property>
    <property name="spacing">18</property>
    <child>
      <object class="GtkGrid">
        <property name="hexpand">1</property>
        <property name="orientation">vertical</property>
        <property name="row_spacing">6</property>
        <child>
          <object class="GtkGrid">
            <property name="margin-start">12</property>
            <property name="hexpand">1</property>
            <property name="orientation">vertical</property>
            <property name="row_spacing">6</property>
            <property name="column_spacing">6</property>
            <child>
              <object class="GtkCheckButton" id="certauth_save">
                <property name="label" translatable="1">Save Authentication</property>
                <property name="focusable">1</property>
                <property name="halign">start</property>
                <property name="hexpand">1</property>
                <layout>
                  <property name="column">1</property>
                  <property name="row">2</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkEntry" id="certauth_password">
                <property name="focusable">1</property>
                <property name="hexpand">1</property>
                <property name="visibility">0</property>
                <property name="activates_default">1</property>
                <layout>
                  <property name="column">1</property>
                  <property name="row">1</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="label21">
                <property name="label" translatable="1">Password:</property>
                <property name="xalign">0</property>
                <layout>
                  <property name="column">0</property>
                  <property name="row">1</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="certauth_realm">
                <property name="hexpand">1</property>
                <property name="wrap">1</property>
                <property name="selectable">1</property>
                <property name="xalign">0</property>
                <property name="yalign">0</property>
                <layout>
                  <property name="column">1</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="label19">
                <property name="label" translatable="1">Realm:</property>
                <property name="xalign">0</property>
                <property name="yalign">0</property>
                <layout>
                  <property name="column">0</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>
            <child>
              <placeholder/>
            </child>
            <layout>
              <property name="column">0</property>
              <property name="row">1</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="label1">
            <property name="hexpand">1</property>
            <property name="label" translatable="1">&lt;b&gt;Please add your authentication details&lt;/b&gt;</property>
            <property name="use_markup">1</property>
            <property name="xalign">0</property>
            <layout>
              <property name="column">0</property>
              <property name="row">0</property>
            </layout>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
