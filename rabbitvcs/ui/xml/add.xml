<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="AddWidget" parent="GtkBox">
    <property name="margin-start">12</property>
    <property name="margin-end">12</property>
    <property name="margin_top">12</property>
    <property name="margin_bottom">12</property>
    <property name="orientation">vertical</property>
    <property name="spacing">6</property>
    <child>
      <object class="GtkScrolledWindow" id="scrolledwindow1">
        <property name="height_request">200</property>
        <property name="focusable">1</property>
        <property name="vexpand">1</property>
        <property name="has-frame">1</property>
        <property name="child">
          <object class="GtkTreeView" id="files_table">
            <property name="focusable">1</property>
            <property name="vexpand">1</property>
            <child internal-child="selection">
              <object class="GtkTreeSelection"/>
            </child>
          </object>
        </property>
      </object>
    </child>
    <child>
      <object class="GtkCheckButton" id="select_all">
        <property name="label" translatable="1">Select / Deselect all</property>
        <property name="focusable">1</property>
        <property name="halign">start</property>
        <property name="hexpand">1</property>
        <property name="active">1</property>
      </object>
    </child>
    <child>
      <object class="GtkCheckButton" id="show_ignored">
        <property name="label" translatable="1">Show ignored files</property>
        <property name="focusable">1</property>
        <property name="halign">start</property>
        <property name="hexpand">1</property>
      </object>
    </child>
    <child>
      <object class="GtkGrid">
        <property name="valign">end</property>
        <property name="hexpand">1</property>
        <child>
          <object class="GtkLabel" id="status">
            <property name="hexpand">1</property>
            <property name="xalign">0</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
