<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="CleanWidget" parent="GtkBox">
    <property name="margin-start">12</property>
    <property name="margin-end">12</property>
    <property name="margin_top">12</property>
    <property name="margin_bottom">12</property>
    <property name="hexpand">1</property>
    <property name="vexpand">1</property>
    <property name="orientation">vertical</property>
    <property name="spacing">6</property>
    <child>
      <object class="GtkLabel" id="label1">
        <property name="hexpand">1</property>
        <property name="label" translatable="1">&lt;b&gt;Clean your Repository&lt;/b&gt;</property>
        <property name="use_markup">1</property>
        <property name="xalign">0</property>
      </object>
    </child>
    <child>
      <object class="GtkLabel" id="label2">
        <property name="hexpand">1</property>
        <property name="label" translatable="1">Remove untracked files from the working tree</property>
        <property name="xalign">0</property>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="margin-start">12</property>
        <property name="hexpand">1</property>
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkCheckButton" id="remove_directories">
            <property name="label" translatable="1">Remove directories</property>
            <property name="focusable">1</property>
            <property name="halign">start</property>
            <property name="hexpand">1</property>
            <property name="active">1</property>
          </object>
        </child>
        <child>
          <object class="GtkCheckButton" id="remove_ignored_too">
            <property name="label" translatable="1">Remove ignored files, too</property>
            <property name="focusable">1</property>
            <property name="halign">start</property>
            <property name="hexpand">1</property>
          </object>
        </child>
        <child>
          <object class="GtkCheckButton" id="remove_only_ignored">
            <property name="label" translatable="1">Remove only ignored files</property>
            <property name="focusable">1</property>
            <property name="halign">start</property>
            <property name="hexpand">1</property>
          </object>
        </child>
        <child>
          <object class="GtkCheckButton" id="dryrun">
            <property name="label" translatable="1">Dry run</property>
            <property name="focusable">1</property>
            <property name="halign">start</property>
            <property name="hexpand">1</property>
          </object>
        </child>
        <child>
          <object class="GtkCheckButton" id="force">
            <property name="label" translatable="1">Force</property>
            <property name="focusable">1</property>
            <property name="halign">start</property>
            <property name="hexpand">1</property>
            <property name="active">1</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
