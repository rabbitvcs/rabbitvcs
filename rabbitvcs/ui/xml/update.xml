<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="UpdateWidget" parent="GtkGrid">
    <property name="margin-start">12</property>
    <property name="margin-end">12</property>
    <property name="margin_top">12</property>
    <property name="margin_bottom">12</property>
    <property name="hexpand">1</property>
    <property name="vexpand">1</property>
    <property name="row_spacing">18</property>
    <child>
      <object class="GtkGrid" id="options_box">
        <property name="hexpand">1</property>
        <property name="column_spacing">6</property>
        <child>
          <object class="GtkCheckButton" id="rollback">
            <property name="label" translatable="1">Rollback to specified revision number</property>
            <property name="sensitive">0</property>
            <property name="focusable">1</property>
            <property name="halign">start</property>
            <property name="hexpand">1</property>
            <layout>
              <property name="column">0</property>
              <property name="row">3</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkCheckButton" id="omit_externals">
            <property name="label" translatable="1">Omit Externals</property>
            <property name="focusable">1</property>
            <property name="halign">start</property>
            <property name="hexpand">1</property>
            <layout>
              <property name="column">0</property>
              <property name="row">2</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkCheckButton" id="recursive">
            <property name="label" translatable="1">Recursive</property>
            <property name="focusable">1</property>
            <property name="halign">start</property>
            <property name="hexpand">1</property>
            <property name="active">1</property>
            <layout>
              <property name="column">0</property>
              <property name="row">1</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="label2">
            <property name="halign">start</property>
            <property name="valign">start</property>
            <property name="margin-bottom">6</property>
            <property name="label" translatable="1">&lt;b&gt;Options&lt;/b&gt;</property>
            <property name="use_markup">1</property>
            <property name="xalign">0</property>
            <property name="yalign">0</property>
            <layout>
              <property name="column">0</property>
              <property name="row">0</property>
            </layout>
          </object>
        </child>
        <layout>
          <property name="column">0</property>
          <property name="row">1</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkGrid" id="revision_box">
        <property name="hexpand">1</property>
        <property name="column_spacing">6</property>
        <property name="row_spacing">6</property>
        <child>
          <object class="GtkGrid" id="revision_container">
            <property name="hexpand">1</property>
            <layout>
              <property name="column">0</property>
              <property name="row">1</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="revision_label">
            <property name="valign">start</property>
            <property name="margin_top">6</property>
            <property name="vexpand">1</property>
            <property name="label" translatable="1">&lt;b&gt;Revision&lt;/b&gt;</property>
            <property name="use_markup">1</property>
            <property name="xalign">0</property>
            <layout>
              <property name="column">0</property>
              <property name="row">0</property>
            </layout>
          </object>
        </child>
        <layout>
          <property name="column">0</property>
          <property name="row">0</property>
        </layout>
      </object>
    </child>
  </template>
</interface>
